<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ExpandedAppBar" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListViewPrimary" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ListViewSecondary" parent="@style/TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#D1D1D4</item>
    </style>

    <style name="DividerLighter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E1E1E4</item>
    </style>

</resources>